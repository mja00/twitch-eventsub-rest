# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# EventSub Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_URL=https://your-domain.com/webhooks/eventsub

# Storage Configuration
STORAGE_TYPE=redis  # Use "redis" for production
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# MongoDB Configuration for Analytics
MONGODB_URL=mongodb://mongodb_user:mongodb_password@mongodb:27017/twitch_analytics?authSource=admin
MONGODB_DATABASE=twitch_analytics
MONGO_INITDB_ROOT_USERNAME=mongodb_user
MONGO_INITDB_ROOT_PASSWORD=mongodb_password

# Alternative MongoDB URL (no auth for development)
# MONGODB_URL=mongodb://mongodb:27017/twitch_analytics

# Default streamers to monitor (comma-separated)
DEFAULT_STREAMERS=shroud,ninja,pokimane

# API Security (optional)
REQUIRE_API_KEY=false
API_KEY=your-secure-api-key-here